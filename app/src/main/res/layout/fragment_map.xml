<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <be.digitalia.fosdem.maps.AspectRatioImageView
        android:id="@+id/ivMap"
        android:layout_gravity="center"
        android:contentDescription="@string/menu_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/campusmap"
        />
    <FrameLayout
        android:id="@+id/ivPosition"
        android:visibility="gone"
        android:background="@drawable/accuracy_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:contentDescription="@string/your_position"
            android:src="@drawable/position"
            android:layout_width="@dimen/position_dot_size"
            android:layout_height="@dimen/position_dot_size" />
    </FrameLayout>
</FrameLayout>
